<div class="content-heading">
  Cari Parent dari Bahan Baku
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Search by Item Number JDE
  </div>
  <div class="panel-body">
    <%= form_tag(request.fullpath, {method: :get, :class => "form-inline"}) do %>
    <div class="form-group">
      <%= text_field_tag "kode" %>
    </div>
    <%= submit_tag 'Search', name: nil, class: "btn btn-info" %>
    <% end %>
  </div>
</div>

<% if params[:kode].present? %>
  
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            SEARCH PARAMETER
          </div>
          <div class="panel-body">
            <table id="credit_checks" class="table table-striped table-hover" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Kode Barang</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                <% @search_bom.each do |dp| %>
                <tr>
                  <td><%= dp.imlitm %></td>
                  <td><%= dp.imdsc1.strip + ' ' + dp.imdsc2.strip %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <div class="panel-footer" style="text-align: center">
              <b>JIKA TIDAK DITEMUKAN, MOHON CEK TERLEBIH DAHULU KE ITEM MASTER DI JDE</b>
          	</div>
          </div>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            PARENT BOM BJ MATRASS
          </div>
          <div class="panel-body">
            <table id="productivities" class="table table-striped table-hover" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Kode Barang</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                <% @parent_bom.each do |dp| %>
                <tr>
                  <td><%= dp.imlitm %></td>
                  <td><%= dp.imdsc1.strip + ' ' + dp.imdsc2.strip %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
