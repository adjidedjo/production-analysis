<div class="content-heading">
  Analisis PBJM For PPC
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Search
  </div>
  <div class="panel-body">
    <%= form_tag(request.fullpath, {method: :get, :class => "form-inline"}) do %>
    <div class="form-group">
      From:
    </div>
    <div id="dateffore" class="input-group date" style="size: 10px;">
      <%= text_field_tag "start_date",
      (params[:start_date].present? ? params[:start_date].to_date.strftime("%F") : Date.today),
      class: 'form-control' %>
      <span class="input-group-addon"> <span class="fa fa-calendar"></span> </span>
    </div>
    <div class="form-group">
      To:
    </div>
    <div id="datetfore" class="input-group date" style="size: 10px;">
      <%= text_field_tag "to_date",
      (params[:to_date].present? ? params[:to_date].to_date.strftime("%F") : Date.today),
      class: 'form-control' %>
      <span class="input-group-addon"> <span class="fa fa-calendar"></span> </span>
    </div>
    <%= button_tag 'Export', value: 'xlsx', name: 'format', class: "btn btn-info" %>
    <% end %>
  </div>
</div>
