<div class="content-heading">
  Aging Orders REPORT <%= Date.today.strftime("%d %B %Y") %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Search by Branch Form
  </div>
  <div class="panel-body">
    <%= form_tag(request.fullpath, {method: :get, :class => "form-inline"}) do %>
    <div class="form-group">
      <%= select_tag "branch", options_from_collection_for_select(@bp_prod, "branch", "branch_desc", params[:branch]), {class: "form-control"} %>
    </div>
    <%= submit_tag 'Search', name: nil, class: "btn btn-info" %>
    <% end %>
  </div>
</div>

<% if params[:branch].present? %>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Aging Orders
          </div>
          <div class="panel-body">
            <table id="age_outstanding" class="table table-striped table-hover" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th><center>Order No</center></th>
                  <th><center>Number</center></th>
                  <th><center>Description</center></th>
                  <th><center>Brand</center></th>
                  <th><center>ShipTo</center></th>
                  <th><center>Qty</center></th>
                  <th><center>Order Date</center></th>
                  <th><center>Req Date</center></th>
                  <th><center>Aging Order(day)</center></th>
                  <th>Next Status</th>
                  <th>Orig</th>
                </tr>
              </thead>
              <tbody>
                <% @age_daily.each do |dp| %>
                <tr>
                  <td><%= dp.order_no %></td>
                  <td><%= dp.item_number %></td>
                  <td><%= dp.description %></td>
                  <td><center><%= dp.brand %></center></td>
                  <td><center><%= dp.customer %></center></td>
                  <td><center><%= dp.quantity %></center></td>
                  <td><center><%= dp.order_date %></center></td>
                  <td><center><%= dp.promised_delivery %></center></td>
                  <td><center><%= (Date.today - dp.order_date.to_date).to_i %></center></td>
                  <td><%= dp.last_status %></td>
                  <td><%= dp.originator %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
