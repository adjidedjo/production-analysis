<div class="content-heading">

</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Import Items to Calculate BOM
  </div>
  <div class="panel-body">
    <%= form_tag(request.fullpath, {multipart: true, :class => "form-inline"}) do %>
    <div class="form-group">
      <%= file_field_tag :file %>
    </div>
    <%= submit_tag "Import", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<% if @bom.present? %>
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Outstanding Order
          </div>
          <div class="panel-body">
            <table id="productivities" class="table table-striped table-hover" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Item Number</th>
                  <th>Description</th>
                  <th>QTY</th>
                  <th>UoM</th>
                </tr>
              </thead>
              <tbody>
                <% @bom.each do |key, value| %>
                <tr>
                  <td><%= key[:ixlitm] %></td>
                  <td><%= key[:imdsc] %></td>
                  <td><%= key[:total] %></td>
                  <td><%= key[:ixum].nil? ? "A" : key[:ixum] %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    RULES
  </div>
  <div class="panel-body">
    <p>
      CSV file hanyalah satu-satunya file yang bisa diupload.
      Dibawah ini adalah kolom yang bisa diupload.
    </p>
    <ul>
      <li>
        <strong>item_number</strong>
      </li>
      <li>
        <strong>qty</strong>
      </li>
    </ul>
    <p>
      Jika di EXCEL, simpan dengan format csv SAVE AS - format .csv
    </p>
  </div>
</div>