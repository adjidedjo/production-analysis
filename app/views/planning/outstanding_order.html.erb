<div class="content-heading">
  Outstanding REPORT <%= Date.today.strftime("%d %B %Y") %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Outstanding Order
          </div>
          <div class="panel-body">
            <table id="datatable_customer" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th><strong>Number</strong></th>
                  <th>Description</th>
                  <th>Buffer</th>
                  <th>SO</th>
                  <th>FG</th>
                  <th>Completions</th>
                  <th>Balance</th>
                  <th>Available</th>
                  <th>Over</th>
                  <th>SO+Buffer</th>
                </tr>
              </thead>
              <tbody>
                <% @out_daily.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.item_number %></td>
                  <td><%= dp.description %></td>
                  <td><center><%= dp.buffer %></td>
                  <td><center><%= dp.outstanding_order %></center></td>
                  <td><center><%= dp.onhand %></<center></td>
                  <td><center><%= dp.stock_c %></center></td>
                  <td><center><%= dp.outstanding_order - dp.stock_f %></center></td>
                  <td><center><%= dp.stock_f %></center></td>
                  <td><center><%= dp.stock_f - dp.outstanding_order %></<center></td>
                  <td><center><%= (dp.outstanding_order - dp.stock_f) + dp.buffer %></center></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Buffer Compliance
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Item Number</th>
                  <th>Desc</th>
                  <th>Brand</th>
                  <th>Seg1</th>
                  <th>SOIn</th>
                  <th>Avg Day</th>
                  <th>Avg Month</th>
                  <th>C Buffer</th>
                  <th>Avg vs Buffer</th>
                </tr>
              </thead>
              <tbody>
                <% @out_daily.each do |dp| %>
                <tr class="gradeX">
                  <% avg_day = dp.order_in/(24*3) rescue 0 %>
                  <% avg_month = (dp.order_in/(24*3))*24 rescue 0 %>
                  <td><%= dp.item_number %></td>
                  <td><%= dp.description %></td>
                  <td><%= dp.brand %></td>
                  <td><%= dp.segment1 %></td>
                  <td><%= dp.order_in %></td>
                  <td><%= avg_day %></td>
                  <td><%= avg_month %></td>
                  <td><%= cpercent(dp.stock_f / dp.buffer) rescue 0  %></td>
                  <td><%= cpercent(dp.buffer / avg_day) rescue 0 %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>