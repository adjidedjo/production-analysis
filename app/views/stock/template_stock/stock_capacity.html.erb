<div class="content-heading">
  CAPACITY STOCK <%= Date.today.strftime("%d %B %Y") %> REPORT for <%= @branch %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            CAPACITY Stock
            <b>LAST UPDATE: <%= Time.now.strftime("%d %B %Y") %></b>
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Inventory</th>
                  <th class="sort-numeric">LADY</th>
                  <th class="sort-numeric">ELITE</th>
                  <th class="sort-numeric">SERENITY</th>
                  <th class="sort-numeric">FOAM MATTRESS</th>
                  <th class="sort-numeric">TOTAL</th>
                  <th class="sort-numeric">CAPACITY</th>
                  <th class="sort-numeric">PoC</th>
                </tr>
              </thead>
              <tbody>
                <% @cap_stock.each do |cs| %>
                <tr class="gradeX">
                  <% royal = cs.royal.nil? ? 0 : cs.royal %>
                  <% lady = cs.lady.nil? ? 0 : cs.lady %>
                  <% elite = cs.elite.nil? ? 0 : cs.elite %>
                  <% serenity = cs.serenity.nil? ? 0 : cs.serenity %>
                  <% total = (royal + lady + elite + serenity) %>
                  <td><%= cs.product %></td>
                  <td><%= currency(lady) %></td>
                  <td><%= currency(elite) %></td>
                  <td><%= currency(serenity) %></td>
                  <td><%= currency(royal) %></td>
                  <td><%= currency(total) %></td>
                  <td><%= currency(cs.capacity) %></td>
                  <td><%= cpercent(((total.to_f/cs.capacity.to_f)*100).round(2)) rescue 0 %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>