<div class="content-heading">
  STOCK <%= @state %> <%= @brand %> <%= Date.today.strftime("%d %B %Y") %> REPORT for <%= @branch %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Stock Display
            <b>LAST UPDATE: <%= Time.now.strftime("%d %B %Y") %> <%= (DateTime.now - 30.minutes).beginning_of_hour.strftime('%H:%M') %></b>
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Toko</th>
                  <th>Sales</th>
                  <th>NoSO|NoSJ</th>
                  <th>Kode</th>
                  <th>Descriptions</th>
                  <th>Serial</th>
                  <th>Jumlah</th>
                  <th>Umur</th>
                </tr>
              </thead>
              <tbody>
                <% @stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.customer %></td>
                  <td><%= cs.salesman %></td>
                  <td><%= cs.noso %>|<%= cs.nosj %></td>
                  <td><%= cs.sdlitm.nil? ? '-' : cs.sdlitm.strip %></td>
                  <td><%= cs.desc1.nil? ? '-' : cs.desc1.strip %></td>
                  <td><%= cs.lilotn.nil? ? '-' : cs.lilotn.strip %></td>
                  <td><%= cs.jml/10000 %></td>
                  <td><%= cs.receive_date == 0 ? 0 : (Date.today - julian_to_date(cs.receive_date)).to_i %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>