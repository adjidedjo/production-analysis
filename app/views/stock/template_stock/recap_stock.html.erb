<div class="content-heading">
  RECAP STOCK <%= @brand %> <%= Date.today.strftime("%d %B %Y") %> REPORT for <%= @branch %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            RECAP Stock
            <b>LAST UPDATE: <%= Time.now.strftime("%d %B %Y") %> <%= (DateTime.now - 30.minutes).beginning_of_hour.strftime('%H:%M') %></b>
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Inventory</th>
                  <th class="sort-numeric">Mattress</th>
                  <th class="sort-numeric">Divan</th>
                  <th class="sort-numeric">Headboard</th>
                  <th class="sort-numeric">Sorong Atas</th>
                  <th class="sort-numeric">Sorong Bawah</th>
                  <th class="sort-numeric">Sorong Tengah</th>
                  <th class="sort-numeric">Foam Mattress</th>
                </tr>
              </thead>
              <tbody>
                <% @recap_stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= checking_status(cs.status) %></td>
                  <td><%= cs.km %></td>
                  <td><%= cs.dv %></td>
                  <td><%= cs.hb %></td>
                  <td><%= cs.sa %></td>
                  <td><%= cs.sb %></td>
                  <td><%= cs.st %></td>
                  <td><%= cs.kb %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>