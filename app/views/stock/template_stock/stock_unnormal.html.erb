<div class="content-heading">
  STOCK <%= @state %> <%= @brand %> <%= Date.today.strftime("%d %B %Y") %> REPORT for <%= @branch %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Stock Unnormal or Tanggung
            <b>REAL TIME</b> 
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>PRODUCT</th>
                  <th>PANJANG</th>
                  <th>LEBAR</th>
                  <th class="sort-numeric">Jumlah</th>
                </tr>
              </thead>
              <tbody>
                <% @stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.dsc1.strip + ' ' + cs.dsc2.strip[0..-10] %></td>
                  <td><%= cs.panjang %></td>
                  <td><%= cs.lebar %></td>
                  <td><%= cs.jumlah %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="panel-footer">DATA STOCK IS AVAILABLE QUANTITY TO BOOK</div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>